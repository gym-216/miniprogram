/**app.wxss**/
@import 'weui.wxss';

/* 详情页 */
.item-ul {
  display: flex;
  flex: 1;
  flex-flow: column nowrap;
  padding: 10rpx 30rpx 15rpx;
  overflow: hidden;
}
.item-ul-li {
  display: flex;
  border-bottom: 1px solid #eee;
  /* border-top: 1px solid #eee; */
  padding: 20rpx 5rpx 10rpx;
}
.ul-li-label {  
    color: #888;
    width: 98pt;
}
.ul-li-content {
    flex: 1;
}

/* down 箭头 */
.arrow {
  width: 8px;
  height: 8px;
  border-top: 3px solid #999;
  border-right: 3px solid #999;
  transform: rotate(135deg);
  margin-left: 15px;
  margin-top: -4px;
}